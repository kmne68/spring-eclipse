<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	default-init-method="init" default-destroy-method="destroy"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="person" class="com.kemery.spring.demo.Person"
		scope="singleton" init-method="onCreate" destroy-method="onDestroy"
		factory-method="getInstance">
		<constructor-arg value="777" type="int" index="0" name="id"></constructor-arg>
		<constructor-arg value="George" index="1" name="name" type="String"></constructor-arg>
		<property name="taxId" value="123456789"></property>
		<property name="address" ref="address"></property>
	</bean>
	
	<bean id="person2" class="com.kemery.spring.demo.Person"
		scope="singleton" init-method="onCreate" destroy-method="onDestroy"
		factory-method="createPerson" factory-bean="personfactory">
		<constructor-arg value="654" type="int" index="0" name="id"></constructor-arg>
		<constructor-arg value="Mike" index="1" name="name" type="String"></constructor-arg>
		<property name="taxId" value="123456789"></property>
		<property name="address" ref="address"></property>
	</bean>

	<bean id="address" class="com.kemery.spring.demo.Address">
		<constructor-arg name="street" value="123 Test Dr" index="0" type="String"></constructor-arg>
		<constructor-arg name="postcode" value="55555" index="1" type="String"></constructor-arg>
	</bean>
	
	<bean id="address2" class="com.kemery.spring.demo.Address" p:street="71 Easy Street" p:postcode="75757">
		<!-- constructor-arg name="street" value="745 Test Dr" index="0" type="String"></constructor-arg>
		<constructor-arg name="postcode" value="76541" index="1" type="String"></constructor-arg-->
	</bean>
	
	<bean id="personfactory"
		class="com.kemery.spring.demo.PersonFactory">
	</bean>
	<bean id="adventuringparty" name="list"
		class="com.kemery.spring.demo.AdventuringParty">
	<constructor-arg value="Unexpected Party"></constructor-arg>
	<constructor-arg>
		<list>
			<value>Gandalf</value>
			<value>Thorin</value>
			<value>Fili</value>
			<value>Kili</value>
			<value>Dori</value>
			<value>Nori</value>
			<value>Ori</value>
			<value>Oin</value>
			<value>Gloin</value>
			<value>Bifur</value>
			<value>Bofur</value>
			<value>Bombur</value>
			<value>Balin</value>
			<value>Dwalin</value>
		</list>
	</constructor-arg>
	</bean>
</beans>
